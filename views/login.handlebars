<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/png" href="/img/AIDRLogo.png" />
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <title>AIDR - Web Application</title>
</head>

<body>
  <!-- toast notifications -->
  <div id="toaster"></div>
  <!--navbar-->
  <nav class="navbar navbar-expand-md sticky-top navbar-dark py-2" style="background-color: #7386D5; margin-bottom: 0;">
    <a class="navbar-brand pl-2" href="/">
      <img src="/img/AIDRLogo.png" class="d-inline-block align-bottom" style="width: 1.8em; height: 1.8em" alt="Logo">
      AIDR
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarToggler">
      <ul class="navbar-nav ml-auto pr-3">
        <li class="nav-item active">
          <a class="nav-link align-middle" href="http://coe.alfaisal.edu" target="_blank">Home<span class="sr-only">(current)</span></a>
        </li>
      </ul>
    </div>
  </nav>
  <!--/navbar-->
  <!--Login-->
  <div class="container py-3 my-auto">
    <div class="row">
      <div class="mx-auto col-sm-6">
        <div class="card rounded-element">
          <div class="card-body">
            <h4 class="card-title text-center mb-3">Welcome</h4>
            <h6 class="card-subtitle text-center text-muted mb-3">AIDR - Login Portal</h6>
            <form class="form" role="form" method="post" action="/auth/login">
              <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Email</label>
                <div class="col-lg-9">
                  <input class="form-control rounded-element" type="email" id="email" name="email" value="{{email}}" required autofocus>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Password</label>
                <div class="col-lg-9">
                  <input class="form-control rounded-element" type="password" id="password" name="password" value="{{password}}" required>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label"></label>
                  <input type="submit" class="btn btn-primary btn-block rounded-element mx-2" value="Login">
              </div>
            </form>
          </div>
          <div class="card-footer">
            <div class="text-center">
              <a class="small text-primary" href="/auth/resetpassword">Forgot password?</a>
              <!-- Copyright -->
  					  <div class="footer-copyright small text-center text-black-50 py-3">
  							Â© 2019 aidrlabs.com
  					  </div>
  						<!-- /Copyright -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--/Login-->
  <!--Toaster-->
  <script src="/js/code/toaster/glorioustoaster.js" type="text/javascript"></script>
  <!--/Toaster-->
  <!-- Bootstrap JS files: jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="/js/dependencies/jquery/jquery-3.3.1.slim.min.js" type="text/javascript"></script>
  <script src="/js/dependencies/popper/popper.min.js" type="text/javascript"></script>
  <script src="/js/dependencies/bootstrap/bootstrap4.2.1.min.js" type="text/javascript"></script>
  <!--/Bootstrap-->
  <!--Toaster-->
  <script type="text/javascript" src="/js/code/toaster/glorioustoaster.js"></script>
  {{#if signedOut}}
    <script type="text/javascript">
      showSuccess('{{toastMessage}}');
    </script>
  {{/if}}
  {{#if wrongUserPass}}
    <script type="text/javascript">
      showError('{{toastMessage}}');
    </script>
  {{/if}}
  <!--/Toaster-->
</body>
